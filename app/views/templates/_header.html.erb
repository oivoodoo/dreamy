<div id="header">
    <% unless @header.content.blank? %>
        <div>
            <%= @header.content %>
        </div>                
    <% else %>
        <div>
            <div style="float: right;">
              <%= image_tag("office.png") %>
            </div>
            <div style="float: left;">
                      <%= link_to "#{image_tag("dreamy.png", :class => "header-title")}", :controller => :main, :action => :index %>
            </div>
            <div class="clearer">&nbsp;</div>
        </div>
    <% end %>
</div>
