<% if not big_image.nil? and not big_image.photo.nil? %>
	<div class="<%= frame_class %> search-image-bottom">
		<% shadow_frame do %>
			<div class="big-images" style="width: 405px; height: 312px;">
				<center>
          <%= link_to "#{image_tag(big_image.photo.url(:medium))}", house_path(:id => house_id, :house_type => house_type) %>
          <h2 class="search-result-bottom">
            <a href="<%= house_path(:id => house_id, :house_type => house_type) %>">
              <b style="color: red; margin-right: 10px;"><%= house_special_offer %></b><span><%= house_title %></span><span style="color: #999999;">&#187</span>
            </a>
          </h2>
        </center>
			</div>
		<% end %>
		<div class="clearer"></div>
  </div>
<% end %>

