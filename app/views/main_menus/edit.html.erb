<% content_for :top_menu do %>
  <%= link_to "Добавить", :controller => :main_menus, :action => :new %><br />
  <%= link_to "Назад", main_menus_path %>
<% end %>

<h2>Добавить главное меню</h2>
<% form_for(@main_menu) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title, "Заголовок" %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :link, "Ссылка" %><br />
    <%= f.text_field :link %>
  </p>
    <p>
    <%= f.label :position, "Позиция" %><br />
    <%= f.text_field :position %>
  </p>
  <p>
    <%= f.submit "Обновить" %>
  </p>
<% end %>

